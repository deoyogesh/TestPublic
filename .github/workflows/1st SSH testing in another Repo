name: Deploy WebUI.php from DevOps-Project to server

on:
  workflow_dispatch:
    inputs:
      server_ip:
        description: "Target server IP"
        required: true
      server_user:
        description: "Target server username"
        required: true

jobs:
  deploy:
    runs-on: self-hosted

    steps:
      - name: Checkout Repo A (current repo: TestPublic)
        uses: actions/checkout@v3

      - name: Checkout Repo B (DevOps-Project via deploy key)
        uses: actions/checkout@v3
        with:
          repository: ${{ github.repository_owner }}/DevOps-Project
          ssh-key: ${{ secrets.GH_DEPLOY_KEY }}
          ref: main
          path: repo-b
          persist-credentials: false
          ssh-strict: false

      - name: Debug (list files from Repo B)
        run: ls -l repo-b

      - name: Test SSH connection to server
        run: |
          printf "%s\n" "${{ secrets.SERVER_SSH_KEY }}" > id_rsa
          chmod 600 id_rsa
          ssh -o StrictHostKeyChecking=no -i id_rsa ${{ github.event.inputs.server_user }}@${{ github.event.inputs.server_ip }} "echo Connected OK"
          rm -f id_rsa

      - name: Copy webui.php from Repo B to server
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ github.event.inputs.server_ip }}
          username: ${{ github.event.inputs.server_user }}
          key: ${{ secrets.SERVER_SSH_KEY }}
          port: 22
          source: "repo-b/webui.php"
          target: "/home/deo/Documents/data"
          overwrite: true
          debug: true
